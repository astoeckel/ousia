%{
	This test checks whether tokens starting with the default field indicator at
	the beginning works by escaping the "!" with a backslash.
}%
\document
\ontology#test{
	\struct#a[root=true]
		\field
			\childRef[ref=b]
			\childRef[ref=c]
	\struct#b
		\syntax
			\short{\!=}
	\struct#c
		\syntax
			\short{=}
}

\begin{a}
= !=
\end{a}
